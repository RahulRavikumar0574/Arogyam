generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                                           String         @id @default(cuid())
  name                                         String
  rollNo                                       String         @unique
  email                                        String         @unique
  passwordHash                                 String
  createdAt                                    DateTime       @default(now())
  updatedAt                                    DateTime       @updatedAt
  emailVerified                                DateTime?
  age                                          Int?
  degree                                       String?
  gender                                       Gender?
  instituteName                                String?
  role                                         Role           @default(STUDENT)
  shareReports                                 Boolean?       @default(true)
  profileImageUrl                              String?
  phone                                        String?
  accounts                                     Account[]
  ActivityLog                                  ActivityLog[]
  Assignment_Assignment_counsellorIdToUser     Assignment[]   @relation("Assignment_counsellorIdToUser")
  Assignment_Assignment_studentIdToUser        Assignment?    @relation("Assignment_studentIdToUser")
  availabilities                               Availability[]
  Conversation_Conversation_counsellorIdToUser Conversation[] @relation("Conversation_counsellorIdToUser")
  Conversation_Conversation_studentIdToUser    Conversation[] @relation("Conversation_studentIdToUser")
  meetingsAsCounsellor                         Meeting[]      @relation("CounsellorMeetings")
  meetingsAsStudent                            Meeting[]      @relation("StudentMeetings")
  Message                                      Message[]
  sessions                                     Session[]
}

model Availability {
  id           String   @id @default(cuid())
  counsellorId String
  startTime    DateTime @db.Timestamptz(6)
  endTime      DateTime @db.Timestamptz(6)
  counsellor   User     @relation(fields: [counsellorId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([counsellorId, startTime], map: "idx_avail_counsellor_start")
}

model Meeting {
  id           String   @id @default(cuid())
  studentId    String
  counsellorId String
  startTime    DateTime @db.Timestamptz(6)
  endTime      DateTime @db.Timestamptz(6)
  reason       String
  status       String   @default("PENDING")
  createdAt    DateTime @default(now()) @db.Timestamptz(6)
  counsellor   User     @relation("CounsellorMeetings", fields: [counsellorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  student      User     @relation("StudentMeetings", fields: [studentId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([counsellorId, startTime], map: "idx_meeting_counsellor_start")
  @@index([studentId, startTime], map: "idx_meeting_student_start")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ActivityLog {
  id        String   @id
  userId    String
  action    String
  details   String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId, createdAt(sort: Desc)], map: "idx_activity_user_created")
}

model Assignment {
  id                                 String   @id
  studentId                          String   @unique(map: "uniq_assignment_student")
  counsellorId                       String
  createdAt                          DateTime @default(now()) @db.Timestamptz(6)
  User_Assignment_counsellorIdToUser User     @relation("Assignment_counsellorIdToUser", fields: [counsellorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  User_Assignment_studentIdToUser    User     @relation("Assignment_studentIdToUser", fields: [studentId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([counsellorId], map: "idx_assignment_counsellor")
}

model Conversation {
  id                                   String    @id
  studentId                            String
  counsellorId                         String
  createdAt                            DateTime  @default(now()) @db.Timestamptz(6)
  User_Conversation_counsellorIdToUser User      @relation("Conversation_counsellorIdToUser", fields: [counsellorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  User_Conversation_studentIdToUser    User      @relation("Conversation_studentIdToUser", fields: [studentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  Message                              Message[]

  @@unique([studentId, counsellorId], map: "uniq_convo_student_counsellor")
  @@index([counsellorId], map: "idx_convo_counsellor")
}

model Message {
  id             String       @id
  conversationId String
  senderId       String
  text           String
  createdAt      DateTime     @default(now()) @db.Timestamptz(6)
  Conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  User           User         @relation(fields: [senderId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([conversationId, createdAt], map: "idx_message_convo_created")
}

model Prediction {
  id        String   @id
  studentId String
  emotion   String
  createdAt DateTime @default(now()) @db.Timestamp(6)

  @@index([createdAt])
  @@index([studentId])
}

enum Role {
  STUDENT
  COUNSELLOR
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
